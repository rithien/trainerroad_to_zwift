            <textevent message="upper &amp; lower body..." timeoffset="13"/>
            <textevent message="and continuing your belly-breathing" timeoffset="17"/>
            <textevent message="As mentioned earlier..." timeoffset="90"/>
            <textevent message="today's objective is improved aerobic capacity" timeoffset="94"/>
            <textevent message="Without getting too scientific or detailed..." timeoffset="100"/>
            <textevent message="we're looking to improve the amount of work..." timeoffset="106"/>
            <textevent message="that you can do aerobically" timeoffset="110"/>
            <textevent message="This isn't to say you'll burn zero sugar..." timeoffset="117"/>
            <textevent message="rather, you'll better utilize oxygen to fuel your efforts" timeoffset="123"/>
            <textevent message="By working at high percentages of your FTP..." timeoffset="130"/>
            <textevent message="over &amp; over again..." timeoffset="136"/>
            <textevent message="we'll work toward the height of your aerobic capabilities..." timeoffset="140"/>
            <textevent message="then repeat those efforts several times over" timeoffset="146"/>
            <textevent message="By accumulating many minutes..." timeoffset="153"/>
            <textevent message="at or near this peak oxygen uptake..." timeoffset="157"/>
            <textevent message="numerous, positive training adaptations..." timeoffset="162"/>
            <textevent message="are likely to take place" timeoffset="167"/>
            <textevent message="Drop the Workout Intensity on this first one..." timeoffset="180"/>
            <textevent message="by 10% if you don't feel warm yet" timeoffset="186"/>
            <textevent message="Better safe than overcooked..." timeoffset="193"/>
            <textevent message="after only a single interval" timeoffset="197"/>
