            <textevent message="Final interval in this first set is up next" timeoffset="120"/>
            <textevent message="If you're feeling pretty good..." timeoffset="127"/>
            <textevent message="tempted to raise the intensity a bit..." timeoffset="131"/>
            <textevent message="maybe wait a little while" timeoffset="134"/>
            <textevent message="Still a lot of work ahead" timeoffset="139"/>
            <textevent message="More excellent form &amp; quick legs..." timeoffset="152"/>
            <textevent message="start to bring up your spin..." timeoffset="158"/>
