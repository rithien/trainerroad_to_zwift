            <textevent message="Return the Workout Intensity to normal..." timeoffset="127"/>
            <textevent message="if necessary/possible" timeoffset="131"/>
            <textevent message="You have the gist of this by now..." timeoffset="140"/>
            <textevent message="45 seconds of high effort..." timeoffset="144"/>
            <textevent message="and 75 seconds of survival..." timeoffset="148"/>
            <textevent message="with excellent form &amp; quick legs" timeoffset="152"/>
            <textevent message="The quick spin is vital..." timeoffset="158"/>
            <textevent message="so don't raise the intensity if you're bogging down" timeoffset="162"/>
            <textevent message="Get ready!" timeoffset="175"/>
        </SteadyState>
        <SteadyState Duration="45.0" PowerLow="1.200" PowerHigh="1.200">
