            <textevent message="but not very much..." timeoffset="9"/>
            <textevent message="and not very quickly" timeoffset="13"/>
            <textevent message="30 seconds, hang in there..." timeoffset="30"/>
            <textevent message="and breeeeeathe!" timeoffset="34"/>
            <textevent message="Big, deep, belly-breaths..." timeoffset="40"/>
            <textevent message="thick abdomen, thin abdomen" timeoffset="44"/>
