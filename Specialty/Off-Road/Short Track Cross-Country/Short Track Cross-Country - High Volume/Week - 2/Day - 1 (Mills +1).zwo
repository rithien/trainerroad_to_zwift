            <textevent message="Different effort levels..." timeoffset="60"/>
            <textevent message="mean different types of muscle contribution" timeoffset="64"/>
            <textevent message="In today's case..." timeoffset="71"/>
            <textevent message="we're targeting &quot;blended&quot; muscle fibers" timeoffset="75"/>
            <textevent message="It's these intermediate fibers..." timeoffset="81"/>
            <textevent message="which are often called upon during hard efforts" timeoffset="85"/>
            <textevent message="Think of these as your make-or-break fibers..." timeoffset="92"/>
