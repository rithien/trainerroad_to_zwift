            <textevent message="make yourself &quot;thick&quot;..." timeoffset="11"/>
            <textevent message="then draw your navel toward your spine..." timeoffset="14"/>
            <textevent message="making yourself &quot;thin&quot;" timeoffset="19"/>
            <textevent message="Belly breaths alternate between..." timeoffset="25"/>
            <textevent message="a thick &amp; thin abdomen..." timeoffset="29"/>
            <textevent message="and they're integral to today's workout" timeoffset="33"/>
            <textevent message="Pick your spin up again..." timeoffset="45"/>
            <textevent message="100rpm or higher if possible, no bouncing" timeoffset="49"/>
