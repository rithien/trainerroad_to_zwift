    <workout>
        <SteadyState Duration="120.0" PowerLow="0.500" PowerHigh="0.500">
            <textevent message="Short &amp; sweet is the name of the game today..." timeoffset="10"/>
            <textevent message="short, sweet &amp; painful" timeoffset="16"/>
            <textevent message="But as usual, pain translates into improved capacity" timeoffset="21"/>
            <textevent message="Specific to today's workout, improved aerobic capacity" timeoffset="28"/>
            <textevent message="Assuming you recover properly, of course" timeoffset="35"/>
            <textevent message="More on this improvement later..." timeoffset="42"/>
            <textevent message="for now, spin lightly &amp; quickly" timeoffset="46"/>
