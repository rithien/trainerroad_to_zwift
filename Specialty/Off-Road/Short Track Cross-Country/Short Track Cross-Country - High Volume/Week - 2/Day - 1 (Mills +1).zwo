            <textevent message="Relax your upper body..." timeoffset="10"/>
            <textevent message="relax your lower legs" timeoffset="14"/>
            <textevent message="See your knees as pistons in an engine..." timeoffset="18"/>
            <textevent message="a high-revving engine..." timeoffset="23"/>
