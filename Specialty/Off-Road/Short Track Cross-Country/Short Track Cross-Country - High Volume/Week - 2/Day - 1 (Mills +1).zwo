            <textevent message="The second you exceed that demand..." timeoffset="30"/>
            <textevent message="and you will..." timeoffset="35"/>
            <textevent message="your sugar utilization skyrockets" timeoffset="39"/>
            <textevent message="So think of breathing..." timeoffset="44"/>
