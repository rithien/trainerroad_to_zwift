            <textevent message="The objectives are still the same though:" timeoffset="105"/>
            <textevent message="Power on target for 2 minutes..." timeoffset="111"/>
            <textevent message="Quick legs for 2 minutes" timeoffset="115"/>
            <textevent message="If either becomes impossible..." timeoffset="120"/>
            <textevent message="reduce the intensity a bit..." timeoffset="124"/>
            <textevent message="but try to keep the initial 60 seconds..." timeoffset="128"/>
            <textevent message="at 110% FTP or higher" timeoffset="133"/>
            <textevent message="Any lower and the workout becomes something unintended" timeoffset="138"/>
            <textevent message="Start to bring up your cadence" timeoffset="160"/>
            <textevent message="Now try to reach and hold..." timeoffset="170"/>
