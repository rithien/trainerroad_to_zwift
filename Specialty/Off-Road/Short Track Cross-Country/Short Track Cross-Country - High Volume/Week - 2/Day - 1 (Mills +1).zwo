            <textevent message="100rpm or higher but no bouncing" timeoffset="3"/>
            <textevent message="Relax your upper body..." timeoffset="10"/>
            <textevent message="relax your feet, ankles, calf muscles" timeoffset="14"/>
            <textevent message="15 more seconds of high power" timeoffset="30"/>
        </SteadyState>
        <Cooldown Duration="75.0" PowerLow="1.200" PowerHigh="1.100">
