            <textevent message="Your spin needs to be quick..." timeoffset="269"/>
            <textevent message="or this workout shifts its focus" timeoffset="274"/>
            <textevent message="Take 30 seconds to settle in..." timeoffset="330"/>
            <textevent message="to a comfortably quick spin" timeoffset="334"/>
            <textevent message="90rpm is a good place to start" timeoffset="338"/>
            <textevent message="Use this final 10 seconds..." timeoffset="350"/>
            <textevent message="to come up to 100rpm or higher" timeoffset="354"/>
        </SteadyState>
        <SteadyState Duration="60.0" PowerLow="1.200" PowerHigh="1.200">
