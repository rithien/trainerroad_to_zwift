            <textevent message="ones that use more oxygen than sugar..." timeoffset="16"/>
            <textevent message="ones that won't fry your muscles nearly as quickly" timeoffset="22"/>
            <textevent message="20 more seconds..." timeoffset="40"/>
            <textevent message="then things ease up ever so slightly" timeoffset="43"/>
        </SteadyState>
        <Cooldown Duration="60.0" PowerLow="1.200" PowerHigh="1.100">
