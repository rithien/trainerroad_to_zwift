            <textevent message="But tease yourself with relief" timeoffset="4"/>
            <textevent message="If you start feeling pretty okay..." timeoffset="10"/>
            <textevent message="that's not a tease ;-)" timeoffset="14"/>
            <textevent message="Now is not the time for relief..." timeoffset="20"/>
            <textevent message="but it's comin' so hang on!" timeoffset="24"/>
            <textevent message="20 seconds, stay relaxed" timeoffset="55"/>
            <textevent message="15, hold your power" timeoffset="60"/>
            <textevent message="10, don't fade!" timeoffset="65"/>
        </Cooldown>
        <SteadyState Duration="360.0" PowerLow="0.500" PowerHigh="0.500">
